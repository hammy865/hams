<body>
  <h1>üîê Private Collatz Explorer</h1>
  <p>Enter a positive integer to see its Collatz sequence:</p>
  <input type="number" id="startNum" min="1" placeholder="Enter positive integer" autofocus />
  <button onclick="runCollatz()">Run</button>
  <div class="results" id="output"></div>

  <script>
    function runCollatz() {
      const output = document.getElementById("output");
      let n = parseInt(document.getElementById("startNum").value);
      if (isNaN(n) || n < 1) {
        output.textContent = "‚ö†Ô∏è Please enter a valid positive integer.";
        return;
      }

      let steps = 0;
      let sequence = [n];
      while (n !== 1) {
        n = (n % 2 === 0) ? n / 2 : 3 * n + 1;
        sequence.push(n);
        steps++;
      }

      output.textContent = `Sequence:\n${sequence.join(" ‚Üí ")}\n\nSteps taken: ${steps}`;
    }
  </script>
